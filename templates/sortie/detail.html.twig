{% extends 'base.html.twig' %}

{% block title %}
    Détail de {{ sortie.nom }} | {{ parent() }}
{% endblock %}

{% block body %}
    {% for label, messages in app.flashes %}
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                <p>{{ message }}</p>
            {% endfor %}
        </div>
    {% endfor %}
    <h1>Détails de la sortie "{{ sortie.nom }}"</h1>
    <a class="btn btn-secondary" href="{{ path('sortie_liste') }}">Retour à la liste</a>
    <dl>
        <dt>Etat : </dt>
        <dd>{{ sortie.etat.libelle }}</dd>

        <dt>Date de début : </dt>
        <dd>{{ sortie.dateHeureDebut|date("D d M Y", "Europe/Paris") }}</dd>

        <dt>Durée (en minutes)</dt>
        <dd>{{ sortie.duree }}</dd>

        <dt>Date limite d'inscription :</dt>
        <dd>{{ sortie.dateLimiteInscription|date("D d M Y", "Europe/Paris") }}</dd>

        <dt>Nombre maximal de participants</dt>
        <dd>{{ sortie.nbInscriptionMax }}</dd>

        <dt>Informations :</dt>
        <dd>{{ sortie.infosSortie|nl2br }}</dd>
    </dl>
    <div class="card mb-4 form-background">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p>Nom: {{ sortie.nom }}</p>
                    <p>📅 Date de début: {{ sortie.dateHeureDebut|date("D d M Y", "Europe/Paris") }}</p>
                    <p>🕒 Date limite d'inscription : {{ sortie.dateLimiteInscription|date("D d M Y", "Europe/Paris") }}</p>
                    <p>👥 Participants max : {{ sortie.nbInscriptionMax }}</p>
                    <p>⏱️ Durée: {{ sortie.duree }} minutes</p>
                    <p>🧑 Organisateur: {{ sortie.organisateur.pseudo }}</p>
                </div>
                <div class="col-md-6">
                    <p>🏫 Campus : {{ sortie.campus.nom }}</p>
                    <p>📍 Lieu : {{ sortie.lieu.nom }}</p>
                    <p>? Rue : {{ sortie.lieu.rue }}</p>
                    <p>? Code Postal : </p>
                    <p>? Latitude / longitude : {{ sortie.lieu.latitude }} / {{ sortie.lieu.longitude }}</p>
                </div>
            </div>
            <hr>
            <p>Description de la sortie</p>
            <div class="border p-2 bg light">
                {{ sortie.infosSortie }}
            </div>
        </div>
    </div>

    <h2 class="mt-4">Liste des participants</h2>

    {% if sortie.participants|length > 0 %}
        <table class="table table-bordered">
            <thead class="table-success">
            <tr>
                <th>Pseudo</th>
                <th>Prénom</th>
                <th>Nom</th>
            </tr>
            </thead>
            <tbody>
            {% for participant in sortie.participants %}
                <tr>
                    <td>
                        <a href="{{ path('app_participant_profil', {'id': participant.id}) }}">
                            {{ participant.pseudo }}
                        </a>
                    </td>
                    <td>{{ participant.prenom }}</td>
                    <td>{{ participant.nom }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="text-light">Aucun participant inscrit pour le moment.</p>
    {% endif %}


{% endblock %}
