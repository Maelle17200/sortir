{% set error = error is defined ? error : null %}


{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Connexion{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté(e) en tant que {{ app.user.userIdentifier }}.<br> {# <a href="{{ path('app_logout') }}">Logout</a> #}
                Redirection vers l'accueil dans quelque secondes...
            </div>

            <script>
                setTimeout(function () {
                    window.location.href = "{{ path('main_accueil') }}";
                }, 3000);
            </script>

        {% endif %}

        {# <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1> #}
        <label for="username">Email</label>
          <input type="email" {# value="{{ last_name }}" #} name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
        <label for="password">Mot de passe</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Se souvenir de moi</label>
            </div>


        <button class="btn btn-lg btn-primary" type="submit">
            Se connecter
        </button>
    </form>
{% endblock %}
