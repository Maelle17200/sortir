{% extends './base.html.twig' %}

{% block title %}
    Modifier mon profil
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm form-background">
                <div class="card-header text-center">

    <h1>Modifier mon profil de {{ participant.pseudo }}</h1>

    {% if app.user.imageURL %}
        <img src="{{ asset('upload/img/' ~ app.user.imageURL) }}" alt="Image de profil de {{ app.user.pseudo }}" width="200px">
        <a class="btn btn-primary" href="{{ path('participant_suppr_img', {id: app.user.id}) }}">Supprimer L'image</a>
    {% endif %}


    {{ form_start(form) }}
                    <div class="mb-3 row align-items-center">
                        <label for="{{ form.campus.vars.id }}" class="col-sm-4 col-form-label text-sm-end">Campus</label>
                        <div class="col-sm-7">
                            {{ form_widget(form.campus, {'attr': {'class': 'form-control form-control-sm'}}) }}
                            {{ form_errors(form.campus) }}
                        </div>
                    </div>

                    <div class="mb-3 row align-items-center">
                        <label for="{{ form.pseudo.vars.id }}" class="col-sm-4 col-form-label text-sm-end">Pseudo</label>
                        <div class="col-sm-7">
                            {{ form_widget(form.pseudo, {'attr': {'class': 'form-control form-control-sm'}}) }}
                            {{ form_errors(form.pseudo) }}
                        </div>
                    </div>

                    <div class="mb-3 row align-items-center">
                        <label for="{{ form.prenom.vars.id }}" class="col-sm-4 col-form-label text-sm-end">Prénom</label>
                        <div class="col-sm-7">
                            {{ form_widget(form.prenom, {'attr': {'class': 'form-control form-control-sm'}}) }}
                            {{ form_errors(form.prenom) }}
                        </div>
                    </div>

                    <div class="mb-3 row align-items-center">
                        <label for="{{ form.nom.vars.id }}" class="col-sm-4 col-form-label text-sm-end">Nom</label>
                        <div class="col-sm-7">
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control form-control-sm'}}) }}
                            {{ form_errors(form.nom) }}
                        </div>
                    </div>

                    <div class="mb-3 row align-items-center">
                        <label for="{{ form.telephone.vars.id }}" class="col-sm-4 col-form-label text-sm-end">Téléphone</label>
                        <div class="col-sm-7">
                            {{ form_widget(form.telephone, {'attr': {'class': 'form-control form-control-sm'}}) }}
                            {{ form_errors(form.telephone) }}
                        </div>
                    </div>

                    <div class="mb-3 row align-items-center">
                        <label for="{{ form.email.vars.id }}" class="col-sm-4 col-form-label text-sm-end">Email</label>
                        <div class="col-sm-7">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-sm'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                    </div>


                    <div class="mb-4 row align-items-center">
                        <label for="{{ form.image.vars.id }}" class="col-sm-4 col-form-label text-sm-end">Image de profil</label>
                        <div class="col-sm-7">
                            {{ form_widget(form.image, {'attr': {'class': 'form-control form-control-sm'}}) }}
                            {{ form_errors(form.image) }}
                        </div>
                    </div>



    {{ form_widget(form) }}
    <button class="btn btn-primary">Enregistrer</button>
    {{ form_end(form) }}
{% endblock %}
