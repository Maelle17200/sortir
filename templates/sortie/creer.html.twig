{% extends 'base.html.twig' %}

{% block body %}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow form-background">
                <div class="card-header text-center">
    <h1>Proposer une nouvelle sortie</h1>

        <div class="card-body">
            {{ form_start(form) }}
            <div class="row g3">
                <div class="col-md-6">
                    {{ form_row(form.nom) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.dateHeureDebut) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.duree) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.dateLimiteInscription) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.lieu) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.nbInscriptionMax) }}
                </div>
            </div>
        </div>



    {{ form_errors(form) }}
    {{ form_widget(form) }}
    <div>
        <a class="btn btn-secondary mt-2" href="{{ path('sortie_liste') }}">Retour Ã  la liste</a>
    </div>
    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}

{% block title %}
    Proposer une sortie | {{ parent() }}
{% endblock %}

